{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["testcafe"],
  "extends": "plugin:testcafe/recommended",
  "parser": "babel-eslint",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, "tab"],
    "no-restricted-syntax": 0,
    "no-console": 0,
    "no-empty": 0,
    "no-irregular-whitespace": 0,
    "max-nested-callbacks": ["error", 5]
  }
}
